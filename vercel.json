{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/analyze-document",
      "dest": "api/index.py",
      "methods": ["POST"]
    },
    {
      "src": "/api/analyze-text",
      "dest": "api/index.py",
      "methods": ["POST"]
    },
    {
      "src": "/api/ask-question",
      "dest": "api/index.py",
      "methods": ["POST"]
    },
    {
      "src": "/api/save-chat",
      "dest": "api/index.py",
      "methods": ["POST"]
    },
    {
      "src": "/api/chat-history",
      "dest": "api/index.py",
      "methods": ["GET"]
    },
    {
      "src": "/api/clear-chat-history",
      "dest": "api/index.py",
      "methods": ["POST"]
    },
    {
      "src": "/api/health",
      "dest": "api/index.py",
      "methods": ["GET"]
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot|ico|json|txt|map))",
      "dest": "/client/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/index.html"
    }
  ],
  "buildCommand": "npm run client:build"
}